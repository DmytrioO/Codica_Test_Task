<%= form_with(url: conclusion_create_path(appointment_id: params[:appointment_id]), method: 'post') do |f| %>
  <div class="field page-content">
    <%= f.label :recommendations, class: 'recommendations-text' %><br />
    <%= f.text_area :recommendations, placeholder: 'Drink water', required: true, class: 'info-field recommend' %>
  </div>

  <div class="field">
    <%= f.submit 'Close appointment', class: 'btn btn-success' %>
  </div>
<% end %>